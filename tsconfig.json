{
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"types": ["node", "jest", "express"],
		"target": "ESNext",
		"module": "CommonJS",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"typeRoots": ["./node_modules/@types"],
		"sourceMap": true,
		"outDir": "dist/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	}
}
